<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Ecomweb</display-name>

    <servlet>
        <servlet-name>RegisterServelet</servlet-name>
        <servlet-class>com.readers.RegisterServelet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.readers.login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Subscribe</servlet-name>
        <servlet-class>com.readers.Subscribe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServelet</servlet-name>
        <url-pattern>/RegisterServelet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Subscribe</servlet-name>
        <url-pattern>/Subscribe</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
